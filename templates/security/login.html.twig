<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <div class="container" style="margin-top: 5px;">
        <div class="row">
            <div class="col">
                <h3>Welcome</h3>
            </div>
        </div>
        {% if error %}
                <div class="row">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
            <div class="col">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="form-outline mb-4">
                        <input type="email" id="username" class="form-control" name="_username"  value="{{ last_username }}"/>
                        <label class="form-label" for="username">Email address</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" id="password" id="password" name="_password" class="form-control" />
                        <label class="form-label" for="password">Password</label>
                    </div>

                    <input type="hidden" name="_target_path" value="{{ path('panel_index') }}">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                </form>
            </div>
        <div>
    </div>
</body>
</html>